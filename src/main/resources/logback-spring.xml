<configuration>
	<include resource="appenders.xml" />

	<springProfile name="dev">
		<logger name="root" level="INFO">
			<appender-ref ref="CONSOLE" />
			<appender-ref ref="FILE" />
		</logger>
		<logger name="com.captech.alfred" level="DEBUG">
			<appender-ref ref="FILE" />
		</logger>
		<logger name="file_upload" level="INFO">
			<appender-ref ref="FILE_UPLOADS" />
		</logger>
	</springProfile>
	<springProfile name="local">
		<logger name="root" level="INFO">
			<appender-ref ref="CONSOLE" />
			<appender-ref ref="FILE" />
		</logger>
		<logger name="com.captech.alfred" level="DEBUG">
			<appender-ref ref="CONSOLE" />
		</logger>
		<logger name="file_upload" level="INFO">
			<appender-ref ref="CONSOLE" />
			<appender-ref ref="FILE" />
		</logger>
	</springProfile>
	<springProfile name="test">
		<logger name="root" level="INFO">
			<appender-ref ref="CONSOLE" />
			<appender-ref ref="FILE" />
		</logger>
		<logger name="file_upload" level="INFO">
			<appender-ref ref="FILE_UPLOADS" />
		</logger>
	</springProfile>
	<springProfile name="production">
		<logger name="root" level="WARN">
			<appender-ref ref="FILE" />
		</logger>
		<logger name="com.captech.alfred.App" level="INFO">
			<appender-ref ref="FILE" />
		</logger>
		<logger name="file_upload" level="INFO">
			<appender-ref ref="FILE_UPLOADS" />
		</logger>
	</springProfile>
</configuration>